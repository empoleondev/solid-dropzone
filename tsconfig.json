{
  "include": ["./src"],
  "exclude": ["./dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",

    "declaration": true,
    "declarationDir": "lib",
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "target": "ES2015",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "composite": true,
    "paths": {
      "solid-dropzone": ["src/index.tsx"],
      "solid-dropzone/*": ["src/*"]
    }
  }
}
